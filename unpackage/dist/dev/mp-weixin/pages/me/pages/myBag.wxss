
.mybag-wrap{
	background: #F1F1F1;
	padding-bottom: 10rpx;
}
._ul{
	margin: 0;
	padding: 0;
	list-style: none;
}
.mybag-title{
	background: #fff;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: space-evenly;
	-webkit-justify-content: space-evenly;
	        justify-content: space-evenly;
	font-size: 28rpx;
	height: 80rpx;
}
.mybag-money{
	margin-top: 20rpx;
	background: #fff;
	width: 94%;
	margin-left: 3%;
	border-radius: 20rpx;
	padding: 20rpx 20rpx;
	box-sizing: border-box;
}
.mybag-money view{
	text-align: center;
	font-size: 28rpx;
	padding: 10rpx 0rpx;
}
.mybag-money view:nth-child(2) {
	font-size: 50rpx;
	color: #FF465C;
}
.uni-list-item{
	height: 60rpx;
	line-height: 60rpx;
	text-align: left;
}
.mybag-text{
	font-size: 24rpx;
	width: 94%;
	margin-left: 3%;
	padding: 20rpx 0rpx;
}
.mybag-text view{
	padding: 4rpx 0rpx;
}
.submit-btn{
	color: #fff;
	background: #FF465C;
	width: 70%;
	text-align: center;
	line-height: 60rpx;
	height: 60rpx;
	margin-left: 15%;
	position: fixed;
	bottom: 10%;
	font-size: 28rpx;
	border-radius: 10rpx;
}
.activeIdx{
	border-bottom: 4rpx solid #FF465C;
	box-sizing: border-box;
}
/*第二部分*/
.mybag-list{
	width: 94%;
	margin-left: 3%;
	border-radius: 10rpx;
	background: #fff;
	font-size: 24rpx;
	margin-bottom: 20rpx;
	padding: 20rpx 0rpx;
	margin-top: 20rpx;
}
.mybag-list-title{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 28rpx;
	-webkit-box-pack: space-evenly;
	-webkit-justify-content: space-evenly;
	        justify-content: space-evenly;
	font-weight: bold;
}
.mybag-list-title text{
	width: 33.3%;
	text-align: center;
}
.mybag-list ._li{
	border-bottom: 1px solid #F1F1F1;
	padding: 20rpx 0rpx;
}
.mybag-list ._li text{
	display: inline-block;
	width: 33.3%;
	text-align: center;
}

