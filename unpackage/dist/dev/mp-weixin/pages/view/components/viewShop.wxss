
.view-shop-wrap{
	padding: 20rpx 30rpx;
	padding-bottom: 30rpx;
	box-sizing: border-box;
	border-bottom: 14rpx solid #F1F1F1;
}
.view-shop{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
}
.view-shop-left{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.view-shop-logo{
	border-radius: 50%;
	background: #FF465C;
	color: #fff;
	text-align: center;
	height: 80rpx;
	width: 80rpx;
	line-height: 80rpx;
	margin-right: 20rpx;
}
.icon-huiyuan{
	font-size: 50rpx;
}
.view-shop-name view:nth-child(1){
	font-size: 32rpx;
}
.view-shop-name view:nth-child(2){
	font-size: 24rpx;
	color: #999999;
}
.view-shop-name text{
	color: #FF465C;
}
.view-shop-go{
	font-size: 24rpx;
}
.view-shop-pf{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: space-evenly;
	-webkit-justify-content: space-evenly;
	        justify-content: space-evenly;
}
.view-shop-pf{
	margin-top: 20rpx;
	font-size: 20rpx;
	color: #666666;
}
.view-shop-pf-cont text:nth-child(2){
	color: #FF465C;
	margin-left: 8rpx;
	margin-right: 10rpx;
}
.icon-RectangleCopy7{
	color: #fff;
	background-color: #FF465C;
	border-radius: 50%;
	height: 30rpx;
	width: 30rpx;
	line-height: 30rpx;
	text-align: 30rpx;
}

